{
	"custom/system-update": {
		"format": "{}",
		"interval": 3600,
		"exec": "~/.config/waybar/scripts/system-update-json",
		"exec-if": "exit 0",
		"return-type": "json",
		"on-click": "kitty -e sh -c 'paru -Syu; rm -f ~/.cache/waybar-system-update.json; pkill -RTMIN+1 waybar'",
		"signal": 1
	}
}
